{
  "include": ["./src"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    // "declaration": false,
    // "declarationDir": "dist",
    "types": ["node"],
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    // "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
  }
}