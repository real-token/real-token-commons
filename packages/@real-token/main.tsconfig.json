{
    "compilerOptions": {
        "baseUrl": ".",
        "types": ["node"],
        "target": "ES2015",
        "lib": ["DOM", "ESNext", "ES2015"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "noEmit": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
      },
    "include": ["./src"],
    "exclude": ["./dist","node_modules"]
}
